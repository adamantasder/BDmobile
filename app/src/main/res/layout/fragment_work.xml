<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/jxc_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/jxc_management" />
            <LinearLayout
                android:id="@+id/layout_jxc_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/jxc_vouch_scan_in"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/scanin"
                        />

                    <TextView
                        android:id="@+id/tv_scanin"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/jxc_vouch_scan_in" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/jxc_vouch_scan_out"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/scanout"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/jxc_vouch_scan_out" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/jxc_vouch_checked"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"

                        android:src="@drawable/vouchchecked"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/jxc_vouch_checked" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/jxc_vouch"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:src="@drawable/vouch"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/jxc_vouch" />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/energy_managment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/energy_managment" />
            <LinearLayout
                android:id="@+id/layout_energy_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/energy_realdata"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/energy_realdata" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/energy_realdata" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">


                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/energy_product"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/energy_product"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/energy_product" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/energy_point"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/energy_point"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/energy_point" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/energy_energy"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:src="@drawable/energy_energy"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/energy_energy" />
                </LinearLayout>


            </LinearLayout>
            <TextView
                android:id="@+id/tv_office_management"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:textSize="17sp"
                android:text="@string/office_management" />

            <LinearLayout
                android:id="@+id/layout_office_management"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                >
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">


                <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_sign_in"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_sign_office"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/sign_in" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">


                <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_leave"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                    android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_qingjia"
                     />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/leave" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:background="?android:attr/selectableItemBackground">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_goout"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_waichu"
                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/go_out" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_business_trip"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:src="@drawable/icon_chuchai"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/business_trip" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp"
                android:paddingLeft="10dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_work_overtime"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_weight="1"
                        android:src="@drawable/icon_jiaban"
                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/work_overtime" />
                </LinearLayout>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="@string/report"
                android:textSize="17sp"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="10dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_day_report"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_qingjia"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/day_report" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_week_report"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_qingjia"
                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/week_report" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_month_report"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_qingjia"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/month_report" />
                </LinearLayout>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_office_communication"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="17sp"

                android:padding="10dp"
                android:text="@string/office_communication" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_video_meeting"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:layout_weight="1"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:src="@drawable/icon_shipin_meeting"
                        />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/video_meeting" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/work_height_ll"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <com.makeramen.roundedimageview.RoundedImageView
                        android:id="@+id/btn_cloud_disk"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/work_height_iv"
                        android:background="?android:attr/selectableItemBackgroundBorderless"
                        android:layout_weight="1"
                        android:src="@drawable/icon_cloud"
                         />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:text="@string/cloud_disk" />
                </LinearLayout>

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

                <Button
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:visibility="invisible" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>
</LinearLayout>